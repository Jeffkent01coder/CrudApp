<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.AddDataFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content"
       >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Hello"
           android:textAppearance="@style/TextAppearance.AppCompat.Title"
           android:padding="10dp"
           />
       <TextView
           android:id="@+id/userName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:textSize="18sp"
           android:text="User"
           android:layout_marginHorizontal="20dp"
           />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="15sp"
           android:text="Fill the Data below"
           android:padding="10dp"
           />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="First Name"
           android:layout_marginStart="20dp"
           android:textStyle="bold"
           />

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_marginVertical="5dp"
           app:boxStrokeColor="#DA7150"
           app:hintTextColor="#DA7150"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_marginHorizontal="30dp"
           android:layout_height="wrap_content">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/firstNameEt"
               android:layout_width="match_parent"
               android:inputType="text"
               android:hint="Enter Firstname"
               android:layout_height="wrap_content"/>


       </com.google.android.material.textfield.TextInputLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Last Name"
           android:layout_marginStart="20dp"
           android:textStyle="bold"
           />

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_marginVertical="5dp"
           app:boxStrokeColor="#DA7150"
           app:hintTextColor="#DA7150"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_marginHorizontal="30dp"
           android:layout_height="wrap_content">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/lastNameEt"
               android:layout_width="match_parent"
               android:inputType="text"
               android:hint="Enter Firstname"
               android:layout_height="wrap_content"/>


       </com.google.android.material.textfield.TextInputLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Age"
           android:layout_marginStart="20dp"
           android:textStyle="bold"
           />

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_marginVertical="5dp"
           app:boxStrokeColor="#DA7150"
           app:hintTextColor="#DA7150"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_marginHorizontal="30dp"
           android:layout_height="wrap_content">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/ageEt"
               android:layout_width="match_parent"
               android:inputType="number"
               android:hint="Enter Age"
               android:layout_height="wrap_content"/>


       </com.google.android.material.textfield.TextInputLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Town"
           android:layout_marginStart="20dp"
           android:textStyle="bold"
           />

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_marginVertical="5dp"
           app:boxStrokeColor="#DA7150"
           app:hintTextColor="#DA7150"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_marginHorizontal="30dp"
           android:layout_height="wrap_content">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/TownEt"
               android:layout_width="match_parent"
               android:inputType="text"
               android:hint="Enter Town"
               android:layout_height="wrap_content"/>


       </com.google.android.material.textfield.TextInputLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Gender"
           android:layout_marginStart="20dp"
           android:textStyle="bold"
           />

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_marginVertical="5dp"
           app:boxStrokeColor="#DA7150"
           app:hintTextColor="#DA7150"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_marginHorizontal="30dp"
           android:layout_height="wrap_content">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/genderEt"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="text"
               android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
               android:hint="Select Gender"
               android:focusable="false"
               android:clickable="true"
               android:drawablePadding="8dp"
               android:onClick="showGenderOptions"/>

       </com.google.android.material.textfield.TextInputLayout>


       <Button
           android:id="@+id/btnSubmit"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Submit"
           android:backgroundTint="#DA7150"
           android:layout_marginHorizontal="100dp"
           />



   </LinearLayout>

</FrameLayout>